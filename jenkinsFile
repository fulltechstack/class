pipeline {
    agent any
    stages {
        stage('Install') {
            steps { 
            bat 'npm install' 
            echo "Installing..."
            }
        }
        stage('build') {
            steps { 
            bat 'npm run ng -- build' 
            echo "Building..."
            }
        }
        stage('deploy') {
            steps { 
            fileOperations([fileCopyOperation(
                        excludes: '',
                        flattenFiles: false,
                        includes: "C:/ProgramData/Jenkins/.jenkins/workspace/class/dist/**",
                        targetLocation: "C:/Users/91999/Desktop/Test"
                    )])
            echo "Deploying..."
         }
        }
       
    }
}

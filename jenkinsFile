pipeline {
    agent any
    stages {
        stage('Install') {
            steps { 
            sh 'npm install' 
            echo "Installing..."
            }
        }
        stage('build') {
            steps { 
            sh 'npm run ng -- build' 
            echo "Building..."
            }
        }
        stage('deploy') {
            steps { 
            sh "sudo cp -a /var/lib/jenkins/workspace/Angular/dist/. /opt/"
            echo "Deploying..."
         }
        }
       
    }
}
